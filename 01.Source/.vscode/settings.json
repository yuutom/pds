{
    "python.testing.cwd": "${workspaceFolder}/OpenAPI",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    // ファイル保存時にテスト対象コードを自動的に探索
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    // pytest実行時の引数設定を追加
    // --cov: カバレッジ計測の有効化
    // --cov-report xml: カバレッジ計測レポートをxml形式(coverage.xml)で出力
    // "python.testing.pytestArgs": ["./OpenAPI/tests", "--cov=./OpenAPI", "--cov-report", "xml", "--cov-report", "html", "-s"],

    // pytest実行時の引数設定を追加
    // カバレッジを取得する場合デバッグができないので普段は下記の設定で実行。カバレッジが必要な場合は上の設定で実行
    "python.testing.pytestArgs": ["./tests", "-s"],
    // "python.testing.pytestArgs": ["./OpenAPI/tests", "-s"],

    // エディタ上のカバレッジ表示設定
    // ガター(ブレークポイント等が表示される場所)でのカバレッジ表示有無(default: true)
    "coverage-gutters.showGutterCoverage": true,
    // エディタ行でのカバレッジ表示有無(default: false)
    "coverage-gutters.showLineCoverage": true,
    // ルーラーでのカバレッジ表示有無(default: false)
    "coverage-gutters.showRulerCoverage": true
}